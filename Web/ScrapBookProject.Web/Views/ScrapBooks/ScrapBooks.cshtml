@model ICollection<ScrapBookProject.Web.ViewModels.ScrapBooks.ScrapBookViewModel>
@{
    this.ViewData["Title"] = "Your ScrapBooks";
    var itemCount = 0;
}
<h1 class="text-center">Here are your ScrapBooks!</h1>

<div class="container">
    @foreach (var book in Model)
    {
        if (itemCount % 3 == 0)
        {
            @:<div class="row rowSeparator">
        }
        <div class="book-container col-md-4 justify-content-md-center align-content-md-center">
            <div class="container">
                <div class="row align-content-center">
                    <p>@book.Name</p>
                </div>
                <div class="book row">
                    <img alt="book cover"
                         src="@book.CoverUrl" />
                </div>
                <div class="rowButtons">
                    <a class="btn btn-light" asp-controller="Pages" asp-action="Pages" asp-route-Id="@book.Id"> View </a> |
                    <a class="btn btn-info" href="/Movies/Details/4"> Details </a> |
                    <a class="btn btn-danger" href="/Movies/Delete/4"> Delete </a>
                </div>
            </div>
        </div>
        if (itemCount % 3 == 2)
        {
            @:</div>
            <hr>
        }
        itemCount++;
    }
</div>
<div class="container">
    <div class="row justify-content-md-center">
        <div class="col-md-auto">
            <form method="get" asp-controller="ScrapBooks" asp-action="Create">
                <button class="btn btn-outline-primary btn-pill">Create a ScrapBook!</button>
            </form>
        </div>
    </div>
</div>

<style>
    .rowButtons
    {
        margin-top: 10%;
    }

    .rowSeparator {
        margin-top: 5%;
        margin-bottom: 5%;
    }
    h1 {
        margin-bottom: 5%;
    }

    .book-container {
        display: flex;
        align-items: center;
        justify-content: center;
        perspective: 600px;
    }

    @@keyframes initAnimation {
        0% {
            transform: rotateY(-20deg);
        }

        100% {
            transform: rotateY(-35deg);
        }
    }

    .book {
        width: 200px;
        height: 300px;
        position: relative;
        transform-style: preserve-3d;
        transform: rotateY(-35deg);
        transition: 1.5s ease;
        animation: 1s ease 0s 1 initAnimation;
    }

    .book-container:hover .book,
    .book-container:focus .book {
        transform: rotateY(-20deg);
    }

    .book > :first-child {
        position: absolute;
        top: 0;
        left: 0;
        background-color: red;
        width: 200px;
        height: 300px;
        transform: translateZ(25px);
        background-color: #000000;
        border-radius: 0 0px 0px 0;
        box-shadow: 5px 5px 20px #666;
    }

    .book::before {
        position: absolute;
        content: ' ';
        background-color: blue;
        left: 0;
        top: 0px;
        width: 48px;
        height: 300px;
        transform: translateX(175px) rotateY(90deg);
        background: linear-gradient(90deg, #fff 0%, #f9f9f9 5%, #fff 10%, #f9f9f9 15%, #fff 20%, #f9f9f9 25%, #fff 30%, #f9f9f9 35%, #fff 40%, #f9f9f9 45%, #fff 50%, #f9f9f9 55%, #fff 60%, #f9f9f9 65%, #fff 70%, #f9f9f9 75%, #fff 80%, #f9f9f9 85%, #fff 90%, #f9f9f9 95%, #fff 100% );
    }

    .book::after {
        position: absolute;
        top: 0;
        left: 0;
        content: ' ';
        width: 200px;
        height: 300px;
        transform: translateZ(-25px);
        background-color: #000000;
        border-radius: 0 0px 0px 0;
        box-shadow: -10px 0 50px 10px #666;
    }
</style>