@model ICollection<ScrapBookProject.Web.ViewModels.Categories.CategoryViewModel>
@{
    this.ViewData["Title"] = "Categories";
}

<div class="container">
    <div class="row m-3">
        @foreach (var category in Model)
        {
            <div class="media col-md-4 border border-dark">
                <img class="mr-3" src="@category.ImageUrl" width="150" alt="@category.Name">
                <div class="media-body">
                    <h5 class="mt-0"><a asp-controller="Categories" asp-action="Category" asp-route-Id="@category.Id">@category.Name</a></h5>
                     @category.Description
                </div>
            </div>
        }
    </div>
</div>
