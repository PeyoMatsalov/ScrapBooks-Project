@model ScrapBookProject.Web.ViewModels.Administration.SiteStatisticsViewModel

<div class="card text-center no-hover">
    <div class="header">
        <ul class="nav nav-tabs card-header-tabs">
            <li class="nav-item">
                <a class="btn btn-light" asp-area="Administration" asp-controller="Administration" asp-action="ManageUsers">Manage Users</a>
            </li>
            <li class="nav-item">
                <a class="btn btn-light" asp-area="Administration" asp-controller="Administration" asp-action="ManageCategories">Manage Categories</a>
            </li>
        </ul>
    </div>
    <div class="card-body">
        <h5 class="card-title">Site Statistics</h5>
        <div class="container">
            <div class="row">
                <div class="chart-container col">
                    <canvas id="myChart"></canvas>
                </div>
                <div class="chart-container col">
                    <canvas id="myChart2"></canvas>
                </div>
            </div>
            <div class="row">

            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        var ctx = document.getElementById('myChart').getContext('2d');
        var myChart = new Chart(ctx, {
            type: 'bar',
            data: {
                labels: ['@Model.MonthData.First().Name', '@Model.MonthData.Skip(1).First().Name', '@Model.MonthData.Skip(2).First().Name'],
                datasets: [{
                    label: '# of Registerd Users Per Month In Last 3 Months',
                    data: [@Model.MonthData.First().RegisteredUsersCount, @Model.MonthData.Skip(1).First().RegisteredUsersCount, @Model.MonthData.Skip(2).First().RegisteredUsersCount],
                    backgroundColor: [
                        'rgba(255, 99, 132, 0.2)',
                        'rgba(54, 162, 235, 0.2)',
                        'rgba(255, 206, 86, 0.2)',
                    ],
                    borderColor: [
                        'rgba(255, 99, 132, 1)',
                        'rgba(54, 162, 235, 1)',
                        'rgba(255, 206, 86, 1)',
                    ],
                    borderWidth: 1
                }]
            },
            options: {
                scales: {
                    yAxes: [{
                        ticks: {
                            beginAtZero: true
                        }
                    }]
                }
            }
        });
        myChart.canvas.parentNode.style.height = '500px';
        myChart.canvas.parentNode.style.width = '500px';
    </script>
    <script>
        var ctx = document.getElementById('myChart2').getContext('2d');
        var myChart = new Chart(ctx, {
            type: 'bar',
            data: {
                labels: ['November', 'December', 'Yellow', 'Green', 'Purple', 'Orange', "Pink"],
                datasets: [{
                    label: '# of Registerd Users Per Month',
                    data: [12, 19, 3, 5, 2, 3, 69],
                    backgroundColor: [
                        'rgba(255, 99, 132, 0.2)',
                        'rgba(54, 162, 235, 0.2)',
                        'rgba(255, 206, 86, 0.2)',
                        'rgba(75, 192, 192, 0.2)',
                        'rgba(153, 102, 255, 0.2)',
                        'rgba(255, 159, 64, 0.2)',
                        'rgba(255, 159, 69, 0.2)'
                    ],
                    borderColor: [
                        'rgba(255, 99, 132, 1)',
                        'rgba(54, 162, 235, 1)',
                        'rgba(255, 206, 86, 1)',
                        'rgba(75, 192, 192, 1)',
                        'rgba(153, 102, 255, 1)',
                        'rgba(255, 159, 64, 1)',
                        'rgba(255, 159, 69, 1)'
                    ],
                    borderWidth: 1
                }]
            },
            options: {
                scales: {
                    yAxes: [{
                        ticks: {
                            beginAtZero: true
                        }
                    }]
                }
            }
        });
        myChart.canvas.parentNode.style.height = '500px';
        myChart.canvas.parentNode.style.width = '500px';
    </script>
}
